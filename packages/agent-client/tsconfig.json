{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "#/*": ["./src/*"]
    },
    "composite": true,
    "declaration": true,
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
  },
  "exclude": ["dist", "node_modules"]
}